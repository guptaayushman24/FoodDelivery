<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:backgroundTint="@color/black"
    android:elevation="8dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"

    app:cardMaxElevation="2dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/vegfajita"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/vegfaijita">


            </ImageView>


            <TextView
                android:id="@+id/vegfajitam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Veg Fajita"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/moneym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Rs100"
                android:textColor="#2FB534"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="160dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plusm"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingHorizontal="10dp"
                        android:text="+"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textViewm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>

                    <Button
                        android:id="@+id/minusm"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingHorizontal="10dp"
                        android:text="-"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tpricem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="200dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold">


            </TextView>


            <Button
                android:id="@+id/addtocartm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add Cart">

            </Button>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
